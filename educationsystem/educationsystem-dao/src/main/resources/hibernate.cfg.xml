"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>

		<!-- <property name="hibernate.current_session_context_class"> org.hibernate.context.internal.ThreadLocalSessionContext 
			</property> -->

		<mapping class="com.senla.educationsystem.model.bean.Course" />
		<mapping class="com.senla.educationsystem.model.bean.Group" />
		<mapping class="com.senla.educationsystem.model.bean.Lecture" />
		<mapping class="com.senla.educationsystem.model.bean.Lesson" />
		<mapping
			class="com.senla.educationsystem.model.bean.LessonTime" />
		<mapping class="com.senla.educationsystem.model.bean.Result" />
		<mapping class="com.senla.educationsystem.model.bean.User" />
